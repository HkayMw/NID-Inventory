#:kivy 2.3.0

<CustomCanvas@Widget>:
    canvas:
        # Background Rectangle
        Color:
            rgba: 0.4, 0.4, 0.4, 1  # Background color
        Rectangle:
            pos: self.pos
            size: self.size

        # Header Rectangle
        Color:
            rgba: 0.1, 0.31, 0.31, 1  # Dark teal color
        Rectangle:
            pos: (self.x, self.y + self.height - 25)
            size: (self.width, 25)

        # Header Text
        Color:
            rgba: 1, 1, 1, 1  # White color
        Rectangle:
            pos: (self.x + 120, self.y + self.height - 20)
            size: (160, 20)

        # Search IDs Button
        Color:
            rgba: 0.1, 0.31, 0.31, 1  # Dark teal color
        Rectangle:
            pos: (self.x + 20, self.y + self.height - 75)
            size: (90, 20)
        Color:
            rgba: 1, 1, 1, 1  # White color
        Line:
            rectangle: (self.x + 20, self.y + self.height - 75, 90, 20)
        
        # Add IDs Button
        Color:
            rgba: 0.1, 0.31, 0.31, 1  # Dark teal color
        Rectangle:
            pos: (self.x + 120, self.y + self.height - 75)
            size: (90, 20)
        Color:
            rgba: 1, 1, 1, 1  # White color
        Line:
            rectangle: (self.x + 120, self.y + self.height - 75, 90, 20)

        # Contacts Button
        Color:
            rgba: 0.1, 0.31, 0.31, 1  # Dark teal color
        Rectangle:
            pos: (self.x + 220, self.y + self.height - 75)
            size: (90, 20)
        Color:
            rgba: 1, 1, 1, 1  # White color
        Line:
            rectangle: (self.x + 220, self.y + self.height - 75, 90, 20)

BoxLayout:
    orientation: 'vertical'
    CustomCanvas:
        size_hint: (1, 1)
