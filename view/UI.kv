<MyWidget>:
    canvas.before:
        Color:
            rgb: 0.4, 0.4, 0.4  # Background color of the canvas
        Rectangle:
            pos: self.pos
            size: self.size

    # Top bar with title
    BoxLayout:
        size_hint_y: None
        height: 25
        pos_hint: {'top': 1}
        canvas.before:
            Color:
                rgb: 0.01, 0.31, 0.31  # Dark green color
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "NRB / MZUZU"
            color: 1, 1, 1, 1  # White color

    # ID Input Box
    TextInput:
        size_hint: None, None
        size: 99, 15
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
        hint_text: "Enter ID No. / Scan ID"
        multiline: False
        background_color: 0.01, 0.31, 0.31, 1  # Dark green color
        foreground_color: 0.7, 0.7, 0.7, 1  # Light grey color

    # Password Input Box
    TextInput:
        size_hint: None, None
        size: 99, 15
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        hint_text: "Enter password"
        multiline: False
        background_color: 0.01, 0.31, 0.31, 1  # Dark green color
        foreground_color: 0.7, 0.7, 0.7, 1  # Light grey color
        password: True

    # Login Button
    Button:
        size_hint: None, None
        size: 57, 11
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        text: "Login"
        background_color: 0.01, 0.31, 0.31, 1  # Dark green color
        color: 1, 1, 1, 1  # White color
