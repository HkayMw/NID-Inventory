#:kivy 2.3.0
# view/main_view.kv

<MainScreen>:
    id: main_screen
    orientation: "vertical"

    # Teal Header Section
    MDBoxLayout:
        size_hint_y: .14
        pos_hint: {'x': 0, 'y': 0}
        canvas.before:
            Color:
                rgba: (0, 0.5, 0.5, 1)  # Teal color
            Rectangle:
                size: self.size
                pos: self.pos

        Image:
            source: 'Assets/Coat_of_arms_of_Malawi.svg'
            keep_ratio: True
            size_hint_x: .07
            pos_hint: {'x':0}

        MDLabel:
            id: header_label
            text: "ID Inventory Manager"
            color: 1, 1, 1, 1  # White text
            bold: True
            halign: 'center'
            valign: 'middle'
            font_style: 'H3'
            size_hint_y: None
            size_hint_x: 1
            pos_hint: {"center_x": .5, "center_y": .5}
            # width: '300dp'

        Image:
            source: 'Assets/Coat_of_arms_of_Malawi.svg'
            keep_ratio: True
            size_hint_x: .07
            pos_hint: {'x':1}

    # Main Window
    MDBoxLayout:
        id: main_window
        # size_hint_y: .75

        # Side Navigation Rail
        ScreenManager:
            id: side_nav
            name: 'side_nav'
            size_hint_x: 0
            width: 0


        # Main Section
        ScreenManager:
            id: screen_manager
            name: 'screen_manager'
            size_hint_x: 1

    # Footer
    MDBoxLayout:
        orientation: "horizontal"
        id: footer
        size_hint_y: .1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        padding: [5]
        canvas.before:
            Color:
                rgba: (.2, .2, .2, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        MDLabel:
            id: notice
            text: ''
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 1, 0, 1
            font_style: 'H4'
            # font_size: min(self.width * .6, self.height * .6)
